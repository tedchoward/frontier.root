on opInsert () {
	«This script is called after the user creates a new headline in any outline. In turn it calls all the scripts in user.callbacks.opInsert
		«9/20/01; 2:57:32 PM by PBS
	local (adrscript);
	if not defined (user.callbacks.opInsert) {
		new (tableType, @user.callbacks.opInsert)};
	for adrscript in @user.callbacks.opInsert {
		try {
			while typeOf (adrScript^) == addressType {
				adrScript = adrScript^};
			adrscript^ ()}}}


